/* pages/designer/designer.wxss */

.body {
  box-sizing: border-box;
  padding: 48rpx;
  background: #F3F6F9;
  min-height: 100vh;
}

.blueBox {
  width: 100%;
}

.titleBox {
  display: flex;
  align-items: center;
  margin-top: 14rpx;
  margin-bottom: 6rpx;
}

.blueBlock {
  width: 10rpx;
  height: 30rpx;
}

.titleText {
  text-align: center;
  font-size: 28rpx;
  padding-left: 14rpx;
  font-family: 'alipu';
}

.uploadBtn {
  width: 96rpx;
  height: 38rpx;
  margin-left: auto;
  margin-right: 0;
  line-height: 38rpx;
  border-radius: 10rpx;
  border: solid 2rpx #2897FD;
  font-size: 24rpx;
  text-align: center;
  color: #2897FD;
}

.itemBox {
  box-sizing: border-box;
  width: 100%;
  height: 136rpx;
  padding: 24rpx;
  background: white;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  margin-bottom: 14rpx;
}

.fileImg {
  width: 92rpx;
  height: 92rpx;
  margin-right: 32rpx;
}

.fileText {
  font-family: 'alipu';
  font-size: 28rpx;
}

.deleteBtn {
  width: 48rpx;
  height: 48rpx;
  margin-left: auto;
  margin-right: 24rpx;
}

.fileBox {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.emptyImg {
  width: 242rpx;
  height: 176rpx;
}

.emptyText {
  color: #828282;
  font-size: 24rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  font-family: 'alipu';
}

.deleteWindow {
  width: 620rpx;
  height: 428rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.warningIcon {
  width: 120rpx;
  height: 120rpx;
  margin-top: 56rpx;
}

.warningText {
  margin-top: 18rpx;
  font-family: 'alipu';
  font-size: 36rpx;
}

.btnBox {
  display: flex;
  margin-top: 72rpx;
}

.windowBtn {
  width: 310rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 40rpx;
  font-family: 'alipu';
  font-weight: bold;
  background: white;
  text-align: center;
}

.cancelBtn {
  color: #A3A3A3;
}

.confirmBtn {
  color: #2897FD;
}